    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="background-color:#F0F2F5;">

    <%- include("./navbar") -%>

    <section class="container bg-white my-4" style="height:950px; width:70%">
        <div class="container">
            <h1 class="py-3 text-center">
                <%= singlepost.title %>
            </h1> 
            <div class="d-flex justify-content-between">
                <div class="d-flex"><i class="fa-solid fa-circle-user fs-3 text-secondary"></i>
                    <p class="mx-2"><%= singlepost.author.username %></p>
                </div>
                <div><%= moment(singlepost.createdAt).format('ll') %></div>
            </div>

            <% if (singlepost.mediaType === 'image') { %>
                <img style="max-height:300px" src="<%= singlepost.mediaFile %>" class="card-img-top" alt="IMG">
              <% } else { %>
                <video width="100%" height="auto" style="max-height:300px" controls>
                  <source src="<%= singlepost.mediaFile %>" type="video/mp4">
                  <source src="<%= singlepost.mediaFile %>" type="video/ogg">
                  Your browser does not support the video tag.
                </video>

                <% } %>

            <div class="my-2">
                <p>
                <%= singlepost.content %>
                </p>
            </div>
            <div style="border-top:1px solid #E8E9Ec;">
            </div>

            <form class="mt-3">
                <div class="mb-3">
                  <input type="text" placeholder="Add a comment" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-secondary text-dark mx-2">clear</button>
                    <button type="clear" class="btn btn-success btn-sm">Comment</button>
                </div>
            </form>
              <!-- comment section -->
                <div>
                    <p>1 comment</p>
                </div>
            <div class="card my-2 border-0" style="background-color:#f5f5f5;padding:8px 8px 0px 8px;">
               <div class="d-flex justify-content-between">
                    <!-- left section -->
                    <div class="d-flex">
                        <i class="fa-solid fa-circle-user fs-2 mx-2 mt-2 text-secondary"></i>
                         <div>
                         <p class="m-2 mx-2 fw-bold">jaypee</p>
                         </div>
                   </div>
                    <!-- right section -->
                 <div>
                    <p class="text-secondary"><%= moment(singlepost.createdAt).fromNow()%></p>
                    <i class="fa-solid fa-square-pen mx-3"></i>
                    <i class="fa-solid fa-trash-can text-danger"></i>
                 </div>
               </div>
