  <%- include("./navbar") -%>
  <%- include("./messages") -%>

    <!-- main section starts -->
    <div class="" style="background-color:#F0F2F5; height: 90vh;">
      <div class="container d-flex" align="center">
        <div class="mt-5" style="width:50%;">
          <div class="card mx-auto mt-5 shadow p-3 mb-5 bg-body rounded" style="width:80%; height:80%; border:1px solid #ccc">
              <form method="post" action="/user/login" class="mx-auto mt-5" style="width:80%;">
                  <div class="mb-4">
                    <label for="exampleInputEmail1" class="form-label mb-2">Email address</label>
                    <input type="email" name="email" class="form-control rounded-pill p-2 " id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text"></div>
                  </div>
                  <div class="mb-4">
                    <label for="exampleInputPassword1" class="form-label mb-2">Password</label>
                    <input type="password" name="password" class="form-control rounded-pill p-2" id="exampleInputPassword1">
                  </div>
                  <div class="d-grid">
                      <button type="submit" class="btn btn-primary btn-lg">Login</button></div>
              </form>
                <p class="text-center my-3 text-primary">Don't have an account?
                    <span><a href="/register">sign up</a></span>
                </p>
          </div>
      </div>
      <div class="pt-5 mx-auto text-start" style="width:35%; height: 50vh;">
          <h5 class="d-flex justify-content-center">#1 bloggin website for everyone around the globe.Totally free and easy to use.</h5>
          <img class="my-5 mx-auto" src="/asset/images/social-media-animate edited.svg" alt="" width="400px" height="400px">
      </div>
